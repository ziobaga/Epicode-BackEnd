@model List<ProgettoSettimanale.Models.Product>

@{
    ViewData["Title"] = "Products List";
}

<div class="container mt-5">
    <h1 class="mb-4 text-center">Products List</h1>

    <div class="row mb-4">
        <div class="col-md-6">
            <input type="text" id="productSearch" class="form-control" placeholder="Cerca i prodotti..." onkeyup="filterProducts()">
        </div>
    </div>

    <form asp-action="AddMultipleToCart" asp-controller="Cart" method="post">
        <table class="table table-striped table-responsive">
            <thead class="thead-dark">
                <tr>
                    <th>Nome</th>
                    <th>Prezzo</th>
                    <th>Delivery (min)</th>
                    <th>Img</th>
                    <th>Ingredienti aggiuntivi</th>
                    <th>Quantità</th>
                    <th></th>
                </tr>
            </thead>
            <tbody id="productTable">
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Price.ToString("C")</td>
                        <td>@product.DeliveryTimeMin</td>
                        <td>
                            @if (product.Image != null && product.Image.Length > 0)
                            {
                                <img src="data:image/png;base64,@Convert.ToBase64String(product.Image)" alt="@product.Name" style="width: 100px; height: auto;" />
                            }
                            else
                            {
                                <span>No image</span>
                            }
                        </td>
                        <td>
                            @if (product.Ingredients.Any())
                            {
                                <ul>
                                    @foreach (var ingredient in product.Ingredients)
                                    {
                                        <li>@ingredient.Name</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <span>No ingredients</span>
                            }
                        </td>
                        <td>
                            <input type="number" name="products[@product.IdProduct]" value="1" min="1" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="col-md-6">
            <a href="@Url.Action("CreateProducts", "Product")" class="btn btn-success">Create New Product</a>
            <button type="submit" class="btn btn-primary">Add Selected to Cart</button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        function filterProducts() {
            var input, filter, table, tr, td, i, j, txtValue;
            input = document.getElementById("productSearch");
            filter = input.value.toUpperCase();
            table = document.getElementById("productTable");
            tr = table.getElementsByTagName("tr");

            for (i = 0; i < tr.length; i++) {
                tr[i].style.display = "none";
                td = tr[i].getElementsByTagName("td");
                for (j = 0; j < td.length; j++) {
                    if (td[j]) {
                        txtValue = td[j].textContent || td[j].innerText;
                        if (txtValue.toUpperCase().indexOf(filter) > -1) {
                            tr[i].style.display = "";
                            break;
                        }
                    }
                }
            }
        }
    </script>
}
