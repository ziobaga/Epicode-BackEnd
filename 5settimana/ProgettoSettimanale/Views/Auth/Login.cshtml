@model ProgettoSettimanale.Models.Auth.AuthModels
<link rel="stylesheet" href="~/css/auth.css" />
@{
    ViewData["Title"] = "Login";
}
<div class="container">
    <div class="row justify-content-center align-items-center min-vh-100">
        <div class="col-lg-4 col-md-6 col-sm-8 mx-auto">
            <div class="auth-box py-4 px-5 shadow rounded">
                <h2 class="text-center mb-4">Accedi</h2>
                <form asp-action="Login" method="post">
                    @Html.AntiForgeryToken()

                    <div class="form-group mb-3">
                        <label asp-for="Username" class="form-label fw-bold fs-5">Username</label>
                        <input asp-for="Username" class="form-control" placeholder='Username' />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Password" class="form-label fw-bold fs-5">Password</label>
                        <input asp-for="Password" class="form-control" type="password" placeholder='Password' />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary w-100">Accedi</button>
                    </div>
                </form>

                <div class="text-center mt-3">
                    <a class="text-muted" asp-controller="Auth" asp-action="Register">Non hai ancora un'account? Registrati!</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
