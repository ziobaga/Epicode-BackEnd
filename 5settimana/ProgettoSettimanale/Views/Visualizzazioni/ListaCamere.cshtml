@model IEnumerable<Project.Models.Camera>

@{
    ViewData["Title"] = "Lista Camere";
}

<h2 class="text-center mb-4">@ViewData["Title"]</h2>

<div class="container">
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Numero</th>
                    <th>Descrizione</th>
                    <th>Tipologia</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var camera in Model)
                {
                    <tr>
                        <td>@camera.IdCamera</td>
                        <td>@camera.NumeroCamera</td>
                        <td>@camera.Descrizione</td>
                        <td>@camera.Tipologia</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-center mt-4">
        <a asp-controller="Home" asp-action="Management" class="btn btn-secondary">Indietro</a>
    </div>
</div>
