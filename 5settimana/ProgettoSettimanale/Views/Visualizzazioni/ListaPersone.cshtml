@model IEnumerable<Project.Models.Persona>

@{
    ViewData["Title"] = "Lista Persone";
}

<h2 class="text-center mb-4">@ViewData["Title"]</h2>

<div class="container">
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Cognome</th>
                    <th>CF</th>
                    <th>Email</th>
                    <th>Telefono</th>
                    <th>Cellulare</th>
                    <th>Città</th>
                    <th>Provincia</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var persona in Model)
                {
                    <tr>
                        <td>@persona.IdPersona</td>
                        <td>@persona.Nome</td>
                        <td>@persona.Cognome</td>
                        <td>@persona.CF</td>
                        <td>@persona.Email</td>
                        <td>@persona.Telefono</td>
                        <td>@persona.Cellulare</td>
                        <td>@persona.Città</td>
                        <td>@persona.Provincia</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-center mt-4">
        <a asp-controller="Home" asp-action="Management" class="btn btn-secondary">Indietro</a>
    </div>
</div>
