@model Project.Models.ViewModels.RicercaPrenotazioneTipoPensioneVM

@{
    ViewData["Title"] = "Ricerca per Tipo Pensione";
}

<h2 class="mb-4 text-center">@ViewData["Title"]</h2>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-12">
            <form id="searchByTipoPensioneForm" method="post" asp-action="RicercaTipoPensione" class="border p-4 shadow-sm rounded">
                @Html.AntiForgeryToken()
                <div class="form-group mb-4">
                    <label asp-for="TipoPensione" class="control-label fs-4">Tipo di Pensione:</label>
                    <select asp-for="TipoPensione" class="form-select fs-5" aria-label="Tipo di Pensione">
                        <option value="">Seleziona un tipo di pensione</option>
                        <option value="Prima Colazione">Prima Colazione</option>
                        <option value="Pensione Completa">Pensione Completa</option>
                        <option value="Mezza Pensione">Mezza Pensione</option>
                    </select>
                    <span asp-validation-for="TipoPensione" class="text-danger fw-bold"></span>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Cerca</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="text-center mt-3">
    <a asp-controller="Home" asp-action="Management" class="btn btn-secondary">Indietro</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
