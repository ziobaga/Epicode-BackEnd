@model Project.Models.ViewModels.RicercaPrenotazioneCFVM

@{
    ViewData["Title"] = "Cerca Prenotazioni";
}

<h2 class="mb-4 text-center">@ViewData["Title"]</h2>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8 col-12">
            <form id="searchByCFForm" method="post" action="@Url.Action("RicercaCF", "Ricerche")" class="border p-4 shadow-sm rounded">
                @Html.AntiForgeryToken()
                <div class="form-group mb-4">
                    <label asp-for="codiceFiscale" class="control-label fs-4">Codice Fiscale</label>
                    <input asp-for="codiceFiscale" class="form-control fs-5" />
                    <span asp-validation-for="codiceFiscale" class="text-danger fw-bold"></span>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Cerca</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="text-center mt-3">
    <a asp-controller="Home" asp-action="Management" class="btn btn-secondary">Indietro</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
