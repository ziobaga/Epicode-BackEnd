@model ProgettoSettimanale.Models.Ricerca.RicercaPrenotazioneByCFRicerca
@{
    ViewData["Title"] = "Cerca Prenotazioni";
}

<h1 class="text-center mb-4">@ViewData["Title"]</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form id="searchByCFForm" method="post" action="@Url.Action("RicercaByCF", "Ricerca")">
                        @Html.AntiForgeryToken()

                        <div class="form-group mb-3">
                            <label asp-for="codiceFiscale" class="form-label fs-5 fw-bold">Codice Fiscale</label>
                            <input asp-for="codiceFiscale" class="form-control form-control-lg" placeholder="Inserisci il codice fiscale" />
                            <span asp-validation-for="codiceFiscale" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-primary">Cerca</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
