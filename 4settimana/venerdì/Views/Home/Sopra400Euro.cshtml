@model IEnumerable<venerdì.Models.ViolazioneSopra400Euro>

@{
    ViewData["Title"] = "Violazioni con Importo Maggiore di 400 Euro";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Violazioni con Importo Maggiore di 400 Euro</h1>

    <div class="card">
        <div class="card-header bg-warning text-dark">
            Elenco delle Violazioni con Importo Maggiore di 400 Euro
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>Nome</th>
                        <th>Cognome</th>
                        <th>Data di Violazione</th>
                        <th>Importo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Nome</td>
                            <td>@item.Cognome</td>
                            <td>@item.DataViolazione.ToShortDateString()</td>
                            <td>@item.Importo.ToString("C")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
