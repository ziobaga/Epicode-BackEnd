@model IEnumerable<venerdì.Models.PuntiDecurtati>

@{
    ViewData["Title"] = "Punti Decurtati per Trasgressore";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Punti Decurtati per Trasgressore</h1>

    <div class="card">
        <div class="card-header bg-info text-white">
            Elenco dei Punti Decurtati per Trasgressore
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>ID Trasgressore</th>
                        <th>Nome</th>
                        <th>Cognome</th>
                        <th>Totale Punti Decurtati</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IDAnagrafica</td>
                            <td>@item.Nome</td>
                            <td>@item.Cognome</td>
                            <td>@item.TotalePuntiDecurtati</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
