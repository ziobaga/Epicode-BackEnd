@model IEnumerable<venerdì.Models.TipoViolazione>

@{
    ViewData["Title"] = "Violazioni";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Violazioni</h1>

    <div class="card">
        <div class="card-header bg-info text-white">
            Elenco delle Violazioni
        </div>
        <div class="card-body">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Descrizione</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var violazione in Model)
                    {
                        <tr>
                            <td>@violazione.IDViolazione</td>
                            <td>@violazione.Descrizione</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Index" class="btn btn-secondary">Back to Home</a>
        </div>
    </div>
</div>
