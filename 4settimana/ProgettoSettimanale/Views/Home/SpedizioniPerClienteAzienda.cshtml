﻿
@model List<ProgettoSettimanale.Models.Spedizione>

@{
    ViewData["Title"] = "Spedizioni per Cliente Azienda";
}

<h1>Spedizioni per Cliente Azienda</h1>

@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>Id Spedizione</th>
                <th>Numero Id</th>
                <th>Data Spedizione</th>
                <th>Peso</th>
                <th>Città Destinatario</th>
                <th>Indirizzo</th>
                <th>Nome Destinatario</th>
                <th>Costo Spedizione</th>
                <th>Data Consegna Prevista</th>
                <th>Data Ultimo Aggiornamento</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var spedizione in Model)
            {
                <tr>
                    <td>@spedizione.IdSpedizione</td>
                    <td>@spedizione.NumId</td>
                    <td>@spedizione.DataSpedizione.ToString("dd/MM/yyyy")</td>
                    <td>@spedizione.Peso</td>
                    <td>@spedizione.CittaDestinatario</td>
                    <td>@spedizione.Indirizzo</td>
                    <td>@spedizione.NomeDestinatario</td>
                    <td>@spedizione.CostoSpedizione</td>
                    <td>@spedizione.DataConsegnaPrev.ToString("dd/MM/yyyy")</td>
                    <td>@spedizione.DataOraAggiornamento.ToString("dd/MM/yyyy")</td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Nessuna spedizione trovata per la partita IVA inserita.</p>
}

<div>
    <a asp-controller="Home" asp-action="Index">Torna alla ricerca</a>
</div>