@using esercizio4.Classi

@model esercizio4.Models.AcquistoDati

@{
    ViewData["Title"] = "View";
}

<h1>Acquisto Biglietto</h1>

<h4>Acquisto Biglietto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="View">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="surname" class="control-label"></label>
                <input asp-for="surname" class="form-control" />
                <span asp-validation-for="surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tipoBiglietto" class="control-label"></label>
                <select asp-for="tipoBiglietto" class="form-select">
                <option value="@((int)Biglietto.TipoBiglietto.Ridotto)">Ridotto</option>
                <option value="@((int)Biglietto.TipoBiglietto.Intero)">Intero</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="sala" class="control-label"></label>
                <select asp-for="sala" class="form-select">
                <option value ="@((int)Sala.name.NORD)">Nord</option>
                <option value="@((int)Sala.name.SUD)">Sud</option>
                <option value="@((int)Sala.name.EST)">Est</option>
                <option value="@((int)Sala.name.OVEST)">Ovest</option>
                </select>
            </div>
            <div class="form-group mt-5">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
